{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 20",
	"_version": "20",

	"compilerOptions": {
		"lib": ["ES2023"],
		"module": "node16",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDirs": ["src", "tests"],
		"baseUrl": "src",
		"paths": {
			"@/tests/*": ["../tests/*"],
			"@/*": ["*"]
		}
	},

	"exclude": ["node_modules", "dist", "tests", "_**"]
}
