{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 20",
	"_version": "20",

	"compilerOptions": {
		"lib": ["ES2023"],
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,

		"rootDirs": ["src", "tests"],
		"baseUrl": "src",
		"paths": {
			"@/tests/*": ["../tests/*"],
			"@/*": ["*"]
		}
	}
}
