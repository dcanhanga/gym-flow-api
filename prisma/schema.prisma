generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Region {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  Country     String?
  midlePoint  coordinates
  Continent   String
  coordinates coordinates[]
  SubRegion   SubRegion[]

  @@map("regions")
}

model SubRegion {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  coordinates coordinates[]
  midlePoint  coordinates
  regionId    String
  region      Region        @relation(fields: [regionId], references: [id])
  gyms        Gym[]
}

model Gym {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  subRegionId String?
  subRegion   SubRegion? @relation(fields: [subRegionId], references: [id])
  createdAt   DateTime   @default(now())

  @@map("gyms")
}

type coordinates {
  latitude  Float
  longitude Float
}
